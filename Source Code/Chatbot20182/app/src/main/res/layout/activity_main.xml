<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="#D0FF00"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/inputRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <EditText
            android:drawableLeft="@drawable/hinh1"
            android:textColorHint="#f00"
            android:id="@+id/inputEditText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start"
            android:layout_margin="5dp"
            android:padding="15dp"
            android:layout_toStartOf="@id/buttonClick"
            android:layout_alignParentStart="true"
            android:hint=" Nhập câu hỏi bạn cần"
            android:imeOptions="actionDone"
            android:inputType="textShortMessage"
            android:textColor="@color/colorAccent"
            android:layout_toLeftOf="@id/buttonClick"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/buttonClick"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:hint="GỬI"
            android:textColor="#0048FF" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>

</LinearLayout>